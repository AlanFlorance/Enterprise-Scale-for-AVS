{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "AVS landing zone accelerator - Greenfield",
            "steps": [
                {
                    "name": "basics",
                    "label": "Azure core setup",
                    "subLabel": {
                        "preValidation": "Provide deployment prefix for the resource groups and resources that will be created.",
                        "postValidation": "Done"
                    },
                    "bladeTitle": "avsBasics",
                    "elements": [
                        {
                            "name": "avsSharedServices",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Workload services baseline deployment",
                            "elements": [
                                {
                                    "name": "info",
                                    "type": "Microsoft.Common.InfoBox",
                                    "options": {
                                        "text": "Subscription and location selected in this step, will be used to deploy AVS workload Landing Zone resources (Private Cloud, Virtual Networks, VMs etc.).",
                                        "style": "Info"
                                    }
                                }
                            ]
                        },
                        {
                            "name": "avsDeploymentScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": []
                            }
                        },
                        {
                            "name": "avsWorkloadSubscription",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "Azure AVS Landing Zones will create the resource group hierarchy under the subscriptions with the prefix provided at this step.",
                                "link": {
                                    "label": "Learn more",
                                    "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/management-group-and-subscription-organization"
                                }
                            }
                        },
                        {
                            "name": "avsDeploymentPrefix",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Deployment prefix",
                            "toolTip": "Provide a prefix (max 8 characters) for the resource groups and resources created as part of AVS landing zones.",
                            "placeholder": "Example: App1",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-z0-9A-Z-]{1,8}$",
                                "validationMessage": "The prefix must be 1-8 characters."
                            }
                        },
                        {
                            "name": "rbacInfo",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": true,
                            "options": {
                                "text": "Azure AVS Landing Zones ARM deployment requires contributor access at the subscription scope. Visit this link to get more information on RBAC permissions and scopes.",
                                "uri": "https://docs.microsoft.com/en-us/azure/role-based-access-control/scope-overview",
                                "style": "Warning"
                            }
                        }
                    ]
                },
                {
                    "name": "PrivateCloud",
                    "label": "AVS Private Cloud",
                    "elements": [
                        {
                            "name": "hostPoolInfo",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": true,
                            "options": {
                                "text": "Placeholder for prerequisites info - perhaps red box or more stronger etc",
                                "uri": "https://docs.microsoft.com/en-us/azure/virtual-desktop/data-locations",
                                "style": "Info"
                            }
                        },
                        {
                            "name": "avsPrivateCloudSettings",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Private Cloud settings",
                            "elements": [
                                {
                                    "name": "avsAddressSpace",
                                    "type": "Microsoft.Common.TextBox",
                                    "visible": true,
                                    "label": "AVS Address Space",
                                    "defaultValue": "",
                                    "toolTip": "The AVS address space needs to be /22, note to rewrite this, add regex for /22 catch",
                                    "constraints": {
                                        "required": true,
                                        "regex": "^((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})(/[2][2])$",
                                        "validationMessage": "Address space must be /22"
                                    }
                                },
                                {
                                    "name": "avsSkuType",
                                    "type": "Microsoft.Common.DropDown",
                                    "visible": true,
                                    "label": "AVS SKU",
                                    "defaultValue": "AV36",
                                    "multiLine": true,
                                    "toolTip": "",
                                    "constraints": {
                                        "required": true,
                                        "allowedValues": [
                                            {
                                                "label": "AV36",
                                                "description": "",
                                                "value": "AV36"
                                            },
                                            {
                                                "label": "AV36T",
                                                "description": "",
                                                "value": "AV36T"
                                            },
                                            {
                                                "label": "AV36P",
                                                "description": "",
                                                "value": "AV36P"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "name": "avsHostCount",
                                    "type": "Microsoft.Common.Slider",
                                    "label": "AVS Host Count",
                                    "subLabel": "",
                                    "toolTip": "Number of hosts in the Private Cloud, minimum 3",
                                    "min": 3,
                                    "max": 16,
                                    "defaultValue": 3,
                                    "showStepMarkers": true,
                                    "constraints": {
                                        "required": true
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "avsNetwork",
                    "label": "Networking and Connectivity",
                    "bladeTitle": "avsNetworkingSettings",
                    "elements": [
                        {
                            "name": "vnetInfoBox",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": true,
                            "options": {
                                "text": "AVS requires connectivity to a network.... replace.",
                                "uri": "",
                                "style": "info"
                            }
                        },
                        {
                            "name": "createAvsVnet",
                            "type": "Microsoft.Common.OptionsGroup",
                            "visible": true,
                            "label": "Virtual network",
                            "defaultValue": "New",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "allowedValues": [
                                    {
                                        "label": "New",
                                        "value": true
                                    },
                                    {
                                        "label": "Existing",
                                        "value": false
                                    }
                                ]
                            }
                        },
                        {
                            "name": "avsVnetAddressSpace",
                            "type": "Microsoft.Common.TextBox",
                            "visible": "[equals(steps('avsNetwork').createAvsVnet, true)]",
                            "label": "vNet address range",
                            "toolTip": "Virtual network for AVS resource in Azure Native. Ensure this is not overlapping the AVS Private Cloud",
                            "placeholder": "Example: 192.168.0.0/22",
                            "constraints": {
                                "required": true,
                                "regex": "^(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)(?:\/(1[0-9]|2[0-4]))$",
                                "validationMessage": "Invalid CIDR range. The address prefix must be in the range 10 to 24."
                            }
                        },
                        {
                            "name": "avsGatewaySubnet",
                            "type": "Microsoft.Common.TextBox",
                            "visible": "[equals(steps('avsNetwork').createAvsVnet, true)]",
                            "label": "Subnet address prefix",
                            "toolTip": "Virtual network subnet for AVS virtual machines",
                            "placeholder": "Example: 192.168.0.0/24",
                            "constraints": {
                                "required": true,
                                "regex": "^(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)(?:\/(1[0-9]|2[0-4]))$",
                                "validationMessage": "Invalid CIDR range. The address prefix must be in the range 10 to 24."
                            }
                        },
                        {
                            "name": "avsBastionSubnet",
                            "type": "Microsoft.Common.TextBox",
                            "visible": "[equals(steps('avsNetwork').createAvsVnet, true)]",
                            "label": "Subnet address prefix",
                            "toolTip": "Virtual network subnet for AVS virtual machines",
                            "placeholder": "Example: 192.168.1.0/24",
                            "constraints": {
                                "required": true,
                                "regex": "^(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)(?:\/(1[0-9]|2[0-4]))$",
                                "validationMessage": "Invalid CIDR range. The address prefix must be in the range 10 to 24."
                            }
                        },
                        {
                            "name": "avsJumpboxSubnet",
                            "type": "Microsoft.Common.TextBox",
                            "visible": "[equals(steps('avsNetwork').createAvsVnet, true)]",
                            "label": "Subnet address prefix",
                            "toolTip": "Virtual network subnet for AVS virtual machines",
                            "placeholder": "Example: 192.168.2.0/24",
                            "constraints": {
                                "required": true,
                                "regex": "^(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)(?:\/(1[0-9]|2[0-4]))$",
                                "validationMessage": "Invalid CIDR range. The address prefix must be in the range 10 to 24."
                            }
                        },
                        {
                            "name": "avsconnectioninfo",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": "[equals(steps('avsNetwork').createAvsVnet, true)]",
                            "options": {
                                "text": "Placeholder for vNet subnet connection information .",
                                "uri": "",
                                "style": "info"
                            }
                        },
                        {
                            "name": "avsExistingVnetInfoBox",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": "[equals(steps('avsNetwork').createAvsVnet, false)]",
                            "options": {
                                "text": "Placeholder - By choosing existing network, ensure you setup connectivity manually after etc...",
                                "uri": "https://docs.microsoft.com/en-us/azure/azure-vmware/tutorial-configure-networking",
                                "style": "info"
                            }
                        },
                        {
                            "name": "createJumpbox",
                            "type": "Microsoft.Common.OptionsGroup",
                            "visible": true,
                            "label": "Deploy Jumpbox",
                            "defaultValue": "Yes",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": true
                                    },
                                    {
                                        "label": "No",
                                        "value": false
                                    }
                                ]
                            }
                        },
                        {
                            "name": "vmSkuSelector",
                            "type": "Microsoft.Compute.SizeSelector",
                            "visible": "[equals(steps('avsNetwork').createJumpbox, true)]",
                            "label": "Jumpbox SKU",
                            "toolTip": "",
                            "recommendedSizes": [
                                "Standard_D1",
                                "Standard_D2",
                                "Standard_D3"
                            ],
                            "constraints": {
                                "allowedSizes": [],
                                "excludedSizes": [],
                                "required": true
                            },
                            "options": {
                                "hideDiskTypeFilter": true
                            },
                            "osPlatform": "Windows",
                            "imageReference": {
                                "publisher": "MicrosoftWindowsDesktop",
                                "offer": "Windows-11",
                                "sku": "21h2-avd"
                            }
                        },
                        {
                            "name": "avsIdentityDomainCredentials",
                            "type": "Microsoft.Common.Section",
                            "visible": "[equals(steps('avsNetwork').createJumpbox, true)]",
                            "label": "Jumpbox login credentials",
                            "elements": [
                                {
                                    "name": "avsIdentityLocalUserName",
                                    "type": "Microsoft.Common.TextBox",
                                    "label": "Username",
                                    "toolTip": "Provide username for session host local admin account.",
                                    "placeholder": "Example: avsadmin",
                                    "defaultValue": "",
                                    "constraints": {
                                        "required": true
                                    }
                                },
                                {
                                    "name": "avsIdentityLocalUserPassword",
                                    "type": "Microsoft.Compute.CredentialsCombo",
                                    "visible": true,
                                    "label": {
                                        "password": "Password",
                                        "confirmPassword": "Confirm password"
                                    },
                                    "toolTip": {
                                        "password": "The password must be alphanumeric, contain at least 12 characters, have at least 1 letter,1 number and 1 special character."
                                    },
                                    "constraints": {
                                        "required": true,
                                        "customPasswordRegex": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&+=_!*<>()])(?=\\S+$).{12,123}$",
                                        "customValidationMessage": "Password must include 1 special character."
                                    },
                                    "options": {
                                        "hideConfirmation": false
                                    },
                                    "osPlatform": "Windows"
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "Monitoring",
                    "label": "Monitoring",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "Addons",
                    "label": "AVS Addons",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "Prefix": "[steps('basics').avsDeploymentPrefix]",
                "Location": "[steps('basics').avsDeploymentScope.location.name]",
                "PrivateCloudAddressSpace": "[steps('PrivateCloud').avsPrivateCloudSettings.avsAddressSpace]",
                "PrivateCloudSKU": "[steps('PrivateCloud').avsPrivateCloudSettings.avsSkuType]",
                "PrivateCloudHostCount": "[steps('PrivateCloud').avsPrivateCloudSettings.avsHostCount]",
                "VNetExists": "[steps('basics').avsDeploymentPrefix]",
                "VNetAddressSpace": "[steps('avsNetwork').avsVnetAddressSpace]",
                "VNetGatewaySubnet": "[steps('avsNetwork').avsGatewaySubnet]",
                "BastionSubnet": "[steps('avsNetwork').avsBastionSubnet]",
                "JumpboxSubnet": "[steps('avsNetwork').avsJumpboxSubnet]",
                "DeployJumpbox": "[steps('basics').avsDeploymentPrefix]",
                "JumpboxSku": "[steps('avsNetwork').vmSkuSelector]",
                "JumpboxUsername": "[steps('avsNetwork').avsIdentityDomainCredentials.avsIdentityLocalUserName]",
                "JumpboxPassword": "[steps('avsNetwork').avsIdentityDomainCredentials.avsIdentityLocalUserPassword]",
                "AlertEmails": "[steps('basics').avsDeploymentPrefix]",
                "DeployHCX": "[steps('basics').avsDeploymentPrefix]",
                "DeploySRM": "[steps('basics').avsDeploymentPrefix]",
                "SRMLicenseKey": "[steps('basics').avsDeploymentPrefix]",
                "VRServerCount": "[steps('basics').avsDeploymentPrefix]",
                "TelemetryOptOut": "[steps('basics').avsDeploymentPrefix]"
            },
            "kind": "Subscription",
            "location": "[steps('basics').avsDeploymentScope.location.name]"
        }
    }
}