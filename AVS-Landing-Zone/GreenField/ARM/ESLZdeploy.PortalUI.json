{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "AVS landing zone accelerator - Baseline",
            "steps": [
                {
                    "name": "test",
                    "label": "Azure Core Setup delete",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "basics",
                    "label": "Azure core setup",
                    "subLabel": {
                        "preValidation": "Provide deployment prefix for the resource groups and resources that will be created.",
                        "postValidation": "Done"
                    },
                    "bladeTitle": "avsBasics",
                    "elements": [
                        {
                            "name": "avsSharedServices",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Workload services baseline deployment",
                            "elements": [
                                {
                                    "name": "info",
                                    "type": "Microsoft.Common.InfoBox",
                                    "options": {
                                        "text": "Subscription and location selected in this step, will be used to deploy AVS workload Landing Zone resources (Application group, host pool, workspace, key vaults, storage, VMs etc.).",
                                        "style": "Info"
                                    }
                                }
                            ]
                        },
                        {
                            "name": "avsDeploymentPrefix",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Deployment prefix",
                            "toolTip": "Provide a prefix (max 4 characters) for the resource groups and resources created as part of AVD landing zones.",
                            "placeholder": "Example: App1",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-z0-9A-Z-]{1,4}$",
                                "validationMessage": "The prefix must be 1-4 characters."
                            }
                        },
                        {
                            "name": "roleinfo",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": true,
                            "options": {
                                "text": "Azure AVS Landing Zones ARM deployment requires owner access at the subscription scope. Visit this link to get more information on RBAC permissions and scopes.",
                                "uri": "https://docs.microsoft.com/en-us/azure/role-based-access-control/scope-overview",
                                "style": "Warning"
                            }
                        }
                    ]
                },
                {
                    "name": "Private Cloud",
                    "label": "Private Cloud",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "Networking",
                    "label": "Networking and Connectivity",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "Identity",
                    "label": "Identity",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "Monitoring",
                    "label": "Monitoring",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "Migration",
                    "label": "Migration",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "Prefix": "[steps('basics').avsDeploymentPrefix]",
                "Location": "[steps('basics').avsDeploymentPrefix]",
                "PrivateCloudAddressSpace": "[steps('basics').avsDeploymentPrefix]",
                "PrivateCloudSKU": "[steps('basics').avsDeploymentPrefix]",
                "PrivateCloudHostCount": "[steps('basics').avsDeploymentPrefix]",
                "VNetExists": "[steps('basics').avsDeploymentPrefix]",
                "VNetAddressSpace": "[steps('basics').avsDeploymentPrefix]",
                "VNetGatewaySubnet": "[steps('basics').avsDeploymentPrefix]",
                "AlertEmails": "[steps('basics').avsDeploymentPrefix]",
                "DeployJumpbox": "[steps('basics').avsDeploymentPrefix]",
                "JumpboxUsername": "[steps('basics').avsDeploymentPrefix]",
                "JumpboxPassword": "[steps('basics').avsDeploymentPrefix]",
                "JumpboxSubnet": "[steps('basics').avsDeploymentPrefix]",
                "JumpboxSku": "[steps('basics').avsDeploymentPrefix]",
                "BastionSubnet": "[steps('basics').avsDeploymentPrefix]",
                "DeployHCX": "[steps('basics').avsDeploymentPrefix]",
                "DeploySRM": "[steps('basics').avsDeploymentPrefix]",
                "SRMLicenseKey": "[steps('basics').avsDeploymentPrefix]",
                "VRServerCount": "[steps('basics').avsDeploymentPrefix]",
                "TelemetryOptOut": "[steps('basics').avsDeploymentPrefix]"
            },
            "kind": "Subscription",
            "location": "[steps('basics').resourceScope.location.name]"
        }
    }
}